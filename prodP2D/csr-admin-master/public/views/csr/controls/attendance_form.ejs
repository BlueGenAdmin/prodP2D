<%- include('../includes/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../includes/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../includes/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <div class="card border-left-dark border-right-dark shadow round mb-3 p-3">
                <h3 class="text-center my-3">
                  Record Your Attendance
                </h3>
                <div id="clockContainer">
                  <div id="hour"></div>
                  <div id="minute"></div>
                  <div id="second"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <div class="row justify-content-between">
                <div class="col-lg-6">
                  <div class="card h-100 border-left-success shadow">
                    <div class="card-body">
                      <div class="col mr-2">
                        <h4 class="text-center text-success">
                          Time In
                        </h4>
                      </div>
                      <form action="/csr/attendance/time_in" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="username" value="<%= user.username %>">
                        <input type="hidden" name="csrId" value="<%= user._id %>">
                        <input type="hidden" name="role" value="<%= user.role %>">
                        <input type="hidden" name="attendanceStatus" value="in">
                        <div class="row align-items-center justify-content-center">
                          <div class="col-auto">
                            <input class="btn btn-success btn-icon-split" type="file" name="image" accept="image/*" required>
                            <button class="btn btn-success btn-icon-split" id="timeOut">
                              <span class="icon text-white-50">
                                <i class="fas fa-sign-in-alt"></i>
                              </span>
                              <span class="text">Time In</span>
                            </button>
                         
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="card h-100 border-left-danger shadow">
                    <div class="card-body">
                      <div class="col mr-2">
                        <h4 class="text-center text-danger">
                          Time Out
                        </h4>
                      </div>
                      <form action="/csr/attendance/time_out" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="username" value="<%= user.username %>">
                        <input type="hidden" name="csrId" value="<%= user._id %>">
                        <input type="hidden" name="role" value="<%= user.role %>">
                        <input type="hidden" name="attendanceStatus" value="out">
                        <div class="row align-items-center justify-content-center">
                          <div class="col-auto">
                            <input class="btn btn-success btn-icon-split"  type="file" name="image" accept="image/*" required>
                            <button class="btn btn-danger btn-icon-split" id="timeIn">
                              <span class="icon text-white-50">
                                <i class="fas fa-sign-in-alt"></i>
                              </span>
                              <span class="text">Time Out</span>
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
      


      <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modalTest">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <form action="" method="post">
              <input type="file">
              <button>dsds</button>
            </form>
            </div>
          </div>
        </div>

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Ace Advantage</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <!-- <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> -->
  <!-- Logout Modal-->
  <%- include('../includes/logout_modal.ejs') %>

  <%- include('../includes/footer.ejs') %>