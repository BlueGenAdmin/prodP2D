<%- include('../includes/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../includes/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../includes/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <h3 class="text-start"></h3>
          <br>
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <div class="row justify-content-end">
                <div class="col-auto">
                  <form action="/csr/attendance/download/<%= user._id %>" method="post">
                    <div class="row">
                      <div class="col-auto">
                        <div class="form-group">
                          <select name="month" id="month" class="form-control">
                            <option disabled selected>Select Month</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-auto">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-download"></i> By Month</button>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="col-auto">
                  <a class="btn btn-primary" href="/csr/attendance/download/<%= user._id %>" target="_blank"><i class="fas fa-download text-white"></i> Download Attendance</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>CSR Name</th>
                      <th>Role</th>
                      <th>Attendance Status</th>
                      <th>Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% attendanceById.forEach(as => {  
                    %>
                    <tr>
                      <td><%= as.username %></td>
                      <td><%= as.role %></td>
                      <td><% if(as.attendanceStatus === "in") { %>
                        <span class="text-success">Time In</span>
                        <% } else { %>
                        <span class="text-danger">Time Out</span>
                        <% } %>
                      </td>
                      <td><%= as.date %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->




      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Ace Advantage</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('../includes/logout_modal.ejs') %>
  <%- include('../includes/footer.ejs') %>