<%- include('includes/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('includes/sidebar.ejs') %>
    <!-- End of Sidebar -->
    
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('includes/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <br>
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h3 class="m-0 font-weight-bold text-primary">Player attendances</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Date Time</th>
                      <th>Role</th>
                      <th>IP Address</th>
                      <th>Options</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% attendances.forEach(function(attendance) {
                      const filePath = attendance.filename ? attendance.filename.substring(6) : "" %> 
                      <tr>
                        <td><%= attendance.username %></td>
                        <td><%= attendance.date %></td>
                        <td><%= attendance.role %></td>
                        <td></td>
                        <td><% if(attendance.attendanceStatus === "in") { %>
                            <span class="text-success"><i class="fa fa-check"></i> Time In</span>
                            <% } else { %>
                            <span class="text-danger"><i class="fa fa-times"></i> Time Out</span>
                            <% } %></td>
                        <td>
                          <div class="row">
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;"
                          src="<%= filePath %>">
                            <div class="col-auto">
                              <a href="#" class="btn btn-info btn-icon-split">
                                <span class="icon text-white-50">
                                  <i class="fas fa-eye"></i>
                                </span>
                                <span class="text">View</span>
                              </a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('includes/logout_modal.ejs') %>
<%- include('includes/footer.ejs') %>